<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duhwan.ustime_backend.dao.UserMapper">

    <insert id="signUp" parameterType="UserDto">
        INSERT INTO User(email, password, name, birthdate, gender, phone, createdAt)
        VALUES(#{email}, #{password}, #{name}, #{birthdate}, #{gender}, #{phone}, #{createdAt})
    </insert>

    <select id="selectUser" resultType="UserDto">
        SELECT *
        FROM User
        WHERE userId=#{userId}
    </select>


    <!--이메일로 유저아이디 찾기-->
    <select id="findByEmail" parameterType="String" resultType="UserDto">
        SELECT *
        FROM User
        WHERE email = #{email}
    </select>

</mapper>